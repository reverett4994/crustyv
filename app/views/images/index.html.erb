

<h1>Listing <%=@sort%> Images</h1>


<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @images %>
    </div>
    <%= will_paginate @images, :container => false %>
  </div>
<%if false%>
  <table>
  <thead>
    <tr>
      <th>title</th>
      <th>Nsfw</th>
      <th>Cat</th>
      <th>Res</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td><%= image.nsfw %></td>
        <td><%= image.cat %></td>
        <td><%= image.res %></td>
        <td>Quality  : <%= rating_for image, 'quality', disable_after_rate: true %></td>
        <td>Girl : <%= rating_for image, 'girl', disable_after_rate: true %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<%@counter=0%>
<div id='full_gallery'>
  <%@images.each do |image| %>

  <%if @counter <8 %>
    <div class='gallery_link'>
    <%= link_to image do %>
        <%@girl = image.girl.to_s%>
        <% if @girl.include? "mp4"%>
          <%= video_tag image.girl.url,controls: false,loop:true,autoplay:true,muted: true,class:'gallery' %>
        <%else%>
          <%= image_tag image.girl.url,class:'gallery' %>
        <%end%>
        <span class="text-content"><span><%=image.title%><br> Quality  : <%= rating_for image, 'quality', disable_after_rate: true %><br>Girl : <%= rating_for image, 'girl', disable_after_rate: true %></span></span>
      </div>
      <%end%>
      <%@counter+=1%>
    <%else%>
    <div class='gallery_link' id="last_gallery_link">
    <%= link_to image do %>
        <%@girl = image.girl.to_s%>
        <% if @girl.include? "mp4"%>
          <%= video_tag image.girl.url,controls: false,loop:true,autoplay:true,muted: true,class:'gallery',id:'last' %>
        <%else%>
          <%= image_tag image.girl.url,class:'gallery',id:'last' %>
        <%end%>
        <span class="text-content"><span><%=image.title%><br> Quality  : <%= rating_for image, 'quality', disable_after_rate: true %><br>Girl : <%= rating_for image, 'girl', disable_after_rate: true %></span></span>
      </div>
      <%end%>
      <%@counter+=1%>
      <%end%>
    <%end%>
</div>
<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @images %>
    </div>
    <%= will_paginate @images, :container => false %>
  </div>
